{
  "extends": "@total-typescript/tsconfig/bundler/dom/app",
  "compilerOptions": {
    /* Next.js/React Specific */
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
